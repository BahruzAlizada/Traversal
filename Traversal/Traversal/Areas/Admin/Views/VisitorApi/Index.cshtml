@{
	Layout = "_AdminLayout";
}
@model List<Visitor>

<h1>Api</h1>
<br />
<table class="table table-bordered">
	<tr>
		<th>Name</th>
		<th>Surname</th>
		<th>City</th>
		<th>Country</th>
		<td>Mail</td>
		<td>Update</td>
		<td>Delete</td>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.Name</td>
			<td>@item.Surname</td>
			<td>@item.City</td>
			<td>@item.Country</td>
			<td>@item.Mail</td>
			<td><a asp-action="Update" class="btn btn-primary"asp-route-id="@item.Id">Update</a></td>
			<td><a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a></td>
		</tr>
	}
</table>

<a asp-action="Create" class="btn btn-success">Create</a>