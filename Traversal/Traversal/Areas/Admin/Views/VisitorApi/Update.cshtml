@{
    Layout = "_AdminLayout";
}
@model Visitor

<h1>Api</h1>


<div class="row">
    <div class="col-8">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <small class="text-muted float-end">Visitor</small>
            </div>
            <div class="card-body">
                <form method="post">

                    <div class="mb-3 form-group">
                        <label asp-for="Name" class="form-label">Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>

                    <div class="mb-3 form-group">
                        <label asp-for="Surname" class="form-label">Surname</label>
                        <input asp-for="Surname" class="form-control" />
                        <span class="text-danger" asp-validation-for="Surname"></span>
                    </div>

                    <div class="mb-3 form-group">
                        <label asp-for="City" class="form-label">City</label>
                        <input asp-for="City" class="form-control" />
                        <span class="text-danger" asp-validation-for="City"></span>
                    </div>

                    <div class="mb-3 form-group">
                        <label asp-for="Country" class="form-label">Country</label>
                        <input asp-for="Country" class="form-control" />
                        <span class="text-danger" asp-validation-for="Country"></span>
                    </div>

                    <div class="mb-3 form-group">
                        <label asp-for="Mail" class="form-label">Mail</label>
                        <input asp-for="Mail" class="form-control" />
                        <span class="text-danger" asp-validation-for="Mail"></span>
                    </div>


                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a asp-action="Index" class="btn btn-primary">Go Back</a>
                </form>
            </div>
        </div>
    </div>
</div>