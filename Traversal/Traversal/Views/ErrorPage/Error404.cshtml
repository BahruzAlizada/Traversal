
@{
    Layout = null;
}

<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Error Page</title>
    <link rel="stylesheet" href="./error_page.css" />
    <script src="https://kit.fontawesome.com/66aa7c98b3.js"
            crossorigin="anonymous"></script>
</head>

<style>

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: "Poppins", sans-serif;
}

.container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.gif {
  display: flex;
  justify-content: center;
}

.content {
  text-align: center;
  margin: 3rem 0;
}

.content .main-heading {
  font-size: 2.5rem;
  font-weight: 700;
}
p {
  font-size: 1.3rem;
  padding: 0.7rem 0;
}

button {
  padding: 1rem;
  border-radius: 15px;
  outline: none;
  border: none;
  background: #0046d4;
  color: #fff;
  font-size: 1.3rem;
  cursor: pointer;
}

</style>

<body>
    <div class="container">
        <div class="gif">
            <img src="https://i.postimg.cc/2yrFyxKv/giphy.gif" alt="gif_ing" />
        </div>
        <div class="content">
            <h1 class="main-heading">This page is gone.</h1>
            <p>
                ...maybe the page you're looking for is not found or never existed.
            </p>
            <a href="https://www.google.co.in/" target="blank">
                <a asp-action="Index" asp-controller="Home" class="btn btn-primary text-white">Back to home</a>
            </a>
        </div>
    </div>
</body>
</html>
