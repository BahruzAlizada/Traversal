<!--Slider Start-->
<section class="w3l-main-slider" id="home">
   @await Component.InvokeAsync("Slider")
</section>
<!-- Slider End -->

<!--Destination Start-->
<section class="w3l-grids-3 py-5">
    <div class="container py-md-5">
        <div class="title-content text-left mb-lg-5 mb-4">
            <h6 class="sub-title">Visit</h6>
            <h3 class="hny-title">Popular Destinations</h3>
        </div>
        <div class="row bottom-ab-grids">
           @await Component.InvokeAsync("Destination")
        </div>
    </div>
</section>
<!--Destination End-->

<!-- Statistic Start -->
<section class="w3l-stats py-5" id="stats">
    <div class="gallery-inner container py-lg-0 py-3">
        <div class="row stats-con pb-lg-3">
            <div class="col-lg-3 col-6 stats_info counter_grid">
                <p class="counter">730</p>
                <h4>Branches</h4>
            </div>
            <div class="col-lg-3 col-6 stats_info counter_grid1">
                <p class="counter">1680</p>
                <h4>Travel Guides</h4>
            </div>
            <div class="col-lg-3 col-6 stats_info counter_grid mt-lg-0 mt-5">
                <p class="counter">812</p>
                <h4>Happy Customers</h4>
            </div>
            <div class="col-lg-3 col-6 stats_info counter_grid2 mt-lg-0 mt-5">
                <p class="counter">990</p>
                <h4>Awards</h4>
            </div>
        </div>
    </div>
</section>
<!-- Statistic End -->

<!-- Featured Start -->
<div class="best-rooms py-5">
    <div class="container py-md-5">
        <div class="ban-content-inf row">
           @await Component.InvokeAsync("Featured")
        </div>
    </div>
</div>
<!-- Featured End -->

<!--Sub About Start-->
<section class="w3l-bottom py-5">
    <div class="container py-md-4 py-3 text-center">
        <div class="row my-lg-4 mt-4">
            <div class="col-lg-9 col-md-10 ml-auto">
               @await Component.InvokeAsync("SubAbout")
            </div>
        </div>
    </div>
</section>
<!--//Sub About End-->

<!-- Testimonail Start -->
<section class="w3l-clients" id="clients">
    <!-- /grids -->
    <div class="cusrtomer-layout py-5">
        <div class="container py-lg-4 py-md-3 pb-lg-0">
            <div class="heading text-center mx-auto">
                <h6 class="sub-title text-center">Here’s what they have to say</h6>
                <h3 class="hny-title mb-md-5 mb-4">our clients do the talking</h3>
            </div>
            <!-- /grids -->
            <div class="testimonial-width">
                <div id="owl-demo1" class="owl-two owl-carousel owl-theme">
                  @await Component.InvokeAsync("Testimonial")
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Testimonial End -->