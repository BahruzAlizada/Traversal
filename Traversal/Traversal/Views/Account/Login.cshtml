@{
	Layout = "_AccountLayout";
}

@{
	ViewBag.Title="Login";
}

@model LoginVM

<div class="limiter">
	<div class="container-login100">
		<div class="wrap-login100">
			<div class="login100-pic js-tilt" data-tilt>
				<img  src="~/account/images/img-01.png" alt="IMG">
			</div>

			<form method="post" class="login100-form validate-form">
				<span class="login100-form-title">
					Member Login
				</span>
				<div class="text-danger" asp-validation-summary="ModelOnly"></div>

				<div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
					<input class="input100" asp-for="Email" placeholder="Email">
					<span class="focus-input100"></span>
					<span class="text-danger" asp-validation-for="Email"></span>
				</div>

				<div class="wrap-input100 validate-input" data-validate="Password is required">
					<input class="input100" asp-for="Password" placeholder="Password">
					<span class="focus-input100"></span>
				</div>
				<span class="text-danger" asp-validation-for="Password"></span>
				<div>
					<input asp-for="IsRemember" />
					<label>Remember Me ?</label>
				</div>
				<div class="container-login100-form-btn">
					<button class="login100-form-btn">
						Login
					</button>
				</div>

				<div class="text-center p-t-12">
					<span class="txt1">
						Forgot
					</span>
					<a class="txt2" href="#">
						Password?
					</a>
				</div>

				<div class="text-center p-t-136">
					<a class="txt2" asp-action="Register">
						Create your Account
						<i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
					</a>
				</div>
			</form>
		</div>
	</div>
</div>


@section ScriptAccount{
	<partial name="_ValidationScriptsPartial" />
}